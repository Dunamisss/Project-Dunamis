{
  "rules": {
    ".read": false,
    ".write": false,
    "prompts": {
      ".read": "auth != null",
      ".write": false
    },
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "usage": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid",
        "remaining": {
          ".validate": "newData.isNumber() && newData.val() == data.val() - 1 && newData.val() >= 0"
        },
        "unlimited": {
          ".read": "auth != null && auth.uid == $uid",
          ".write": false
        }
      }
    },
    "donors": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": false
      }
    }
  }
}
